{
  "manifest_version": 3,
  "name": "Banking APK Security Scanner - Hackathon Demo",
  "version": "1.0",
  "description": "AI-powered fake banking APK detection with real-time ML analysis",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "webRequest"
  ],
  
  "host_permissions": [
    "https://apkpure.com/*",
    "https://apkmirror.com/*",
    "https://play.google.com/*",
    "http://localhost:5001/*",
    "http://localhost:5000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://apkpure.com/*",
        "https://apkmirror.com/*",
        "https://play.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Banking APK ML Scanner"
  }
}
